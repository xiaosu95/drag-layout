{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "lib": [
      "dom",
      "es5",
      "es2016",
      "es2015.promise"
    ],
    "sourceMap": true,
    "pretty": true,
    "types": [
      "node"    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
